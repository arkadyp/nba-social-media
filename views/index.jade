extends layout

block head
  link(rel='stylesheet', href='javascripts/vendor/bootstrap-css/css/bootstrap.css')

  script(type='text/javascript', src='javascripts/controller/StreamController.js')

block content
  div.container(ng-controller="StreamController", ng-init="setTweets( #{JSON.stringify(tweets)} )")
    h1 Social Media

    h2 Tweets

    input.tweetSearch(type='text' placeholder='Search Tweets' ng-model="searchTweets")

    div.row(ng-repeat="tweetObj in tweets | filter:{'tweet':searchTweets}")
      div.tweet
      span.name {{tweetObj.name}} 
      span.username [{{tweetObj.username}}]: 
      span.tweetText {{tweetObj.tweet.text}}
      span.created_at  | {{tweetObj.tweet.created_at | date: "h:mm:a, MMM d, 'y" }}
